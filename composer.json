{
    "name": "valentin-morice/laravel-billing-repository",
    "description": "Config-as-code for billing providers (Stripe, Paddle, etc.) in Laravel. Define products, prices, tax rates, webhooks, and billing settings in versioned files, then plan/apply with artisan commands.",
    "keywords": [
        "Valentin Morice",
        "laravel",
        "laravel-billing-repository",
        "stripe",
        "billing",
        "config-as-code"
    ],
    "homepage": "https://github.com/valentin-morice/laravel-billing-repository",
    "license": "MIT",
    "authors": [
        {
            "name": "Valentin Morice",
            "email": "valentin@morice.live",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/contracts": "^11.31||^12.0",
        "nikic/php-parser": "^5.6",
        "spatie/laravel-package-tools": "^1.16",
        "stripe/stripe-php": "^19.2"
    },
    "require-dev": {
        "laravel/framework": "^11.31||^12.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^9.0||^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "ValentinMorice\\LaravelBillingRepository\\": "src/",
            "ValentinMorice\\LaravelBillingRepository\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ValentinMorice\\LaravelBillingRepository\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ValentinMorice\\LaravelBillingRepository\\LaravelBillingRepositoryServiceProvider"
            ],
            "aliases": {
                "BillingRepository": "ValentinMorice\\LaravelBillingRepository\\Facades\\BillingRepository"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
